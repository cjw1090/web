.header.clearfix
  nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
    .container
      a.navbar-brand(href="/") 
        .maintit1 Eventbrite
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarsExampleDefault", aria-controls="navbarsExampleDefault", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon

      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link(href="/questions") 
              .maintit Browse Events
          li.nav-item
            a.nav-link(href="/users") 
              .maintit Users
          if (!currentUser) 
            li.nav-item
              a.nav-link(href='/signin') 
                .maintit Signin
            li.nav-item
              a.nav-link(href='/users/new') 
                .maintit Signup
          else
            li.nav-item
              a.nav-link(href=`/users/${currentUser._id}`) 
                .maintit My Profile
            li.nav-item
              a.nav-link(href='/signout') 
                .maintit Signout
        
          
